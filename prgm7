#include <stdio.h>
int main()
{   
    int p,r,t,s;
    printf("enter the principal amount:");
    scanf("%d",&p);
    printf("enter the rate of interest:");
    scanf("%d",&r);
    printf("enter the time:");
    scanf("%d",&t);
    s=(p*r*t)/100;
    printf(" simple interest:%d",s);
    return 0;
}
