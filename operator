#include <stdio.h>
int main()
{
    char operator;
    double num1,num2,result;
    printf("ENTER A OPERATOR (+,-,*,/):");
    scanf("%c",&operator);
    printf("ENTER TWO OPERANDS:");
    scanf("%lf %lf",&num1,&num2);
    switch(operator)
    {
        case'+':
        result=num1+num2;
        printf("RESULT:%.2lf\n",result);
        break;
        
        case'-':
        result=num1-num2;
        printf("RESULT:%.2lf\n",result);
        break;
        
        case'*':
        result=num1*num2;
        printf("RESULT:%.2lf\n",result);
        break;
        
        case'/':
        if(num2!=0)
        {
        result=num1/num2;
        printf("RESULT:%.2lf\n",result);
        }
        else;
        {
            printf(" THE 7c NUMBER CANNOT DIVISIBLE BY ZERO");
        }
        break;
    }

    return 0;
}
